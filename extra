<script>
const tog=document.getElementById('tog'),html=document.documentElement;
function setTheme(t){html.setAttribute('data-theme',t);tog.innerHTML=t==='dark'?'&#9788;':'&#9789;';localStorage.setItem('bp-theme',t);}
const saved=localStorage.getItem('bp-theme');
if(saved)setTheme(saved);else if(matchMedia('(prefers-color-scheme:light)').matches)setTheme('light');else setTheme('dark');
tog.onclick=()=>setTheme(html.getAttribute('data-theme')==='dark'?'light':'dark');
document.querySelectorAll('.fade').forEach(el=>new IntersectionObserver(e=>{e.forEach(x=>{if(x.isIntersecting)x.target.classList.add('vis')})},{threshold:0.12}).observe(el));
(function(){
  const ns='http://www.w3.org/2000/svg';
  const wG=document.getElementById('wells'),tG=document.getElementById('tips');
  const car=document.getElementById('carriage'),dG=document.getElementById('droplets');
  const R=6,C=10,PX=70,PY=60,PW=300,PH=180,MX=20,MY=18,WR=9;
  const sx=PX+MX+WR,sy=PY+MY+WR;
  const dx=(PW-2*MX-2*WR)/(C-1),dy=(PH-2*MY-2*WR)/(R-1);
  const w=[];
  for(let r=0;r<R;r++){w[r]=[];for(let c=0;c<C;c++){
    const cx=sx+c*dx,cy=sy+r*dy,el=document.createElementNS(ns,'circle');
    el.setAttribute('cx',cx);el.setAttribute('cy',cy);el.setAttribute('r',WR);
    el.setAttribute('fill','var(--well-empty)');el.setAttribute('stroke','var(--str)');
    el.setAttribute('stroke-width','0.5');el.style.transition='fill 0.5s ease';
    wG.appendChild(el);w[r][c]={el,cx,cy};
  }}
  for(let r=0;r<R;r++){
    const t=document.createElementNS(ns,'line');
    t.setAttribute('x1',0);t.setAttribute('y1',50);t.setAttribute('x2',0);
    t.setAttribute('y2',sy+r*dy-WR-1);t.setAttribute('stroke','var(--tx2)');
    t.setAttribute('stroke-width','1.2');t.setAttribute('opacity','0.4');
    t.setAttribute('stroke-linecap','round');tG.appendChild(t);
    const p=document.createElementNS(ns,'circle');
    p.setAttribute('cx',0);p.setAttribute('cy',sy+r*dy-WR-1);
    p.setAttribute('r','1.5');p.setAttribute('fill','var(--tx2)');p.setAttribute('opacity','0.5');
    tG.appendChild(p);
  }
  let col=-1;
  function ease(t){return t<.5?4*t*t*t:1-Math.pow(-2*t+2,3)/2;}
  function eo(t){return 1-(1-t)*(1-t);}
  function setX(x){car.setAttribute('transform','translate('+x+',0)');}
  function drop(cx,cy){
    const d=document.createElementNS(ns,'circle');
    d.setAttribute('cx',cx);d.setAttribute('r','2');d.setAttribute('fill','var(--ac)');
    d.setAttribute('opacity','0.7');dG.appendChild(d);
    const s=cy-WR-4,dur=280+Math.random()*80,t0=performance.now();
    (function a(now){var t=Math.min((now-t0)/dur,1),e=eo(t);
      d.setAttribute('cy',s+(cy-s)*e);d.setAttribute('opacity',String(.7*(1-t*.5)));
      d.setAttribute('r',String(2-t*.8));
      t<1?requestAnimationFrame(a):dG.removeChild(d);})(performance.now());
  }
  function fill(c){for(let r=0;r<R;r++){var v=w[r][c];
    v.el.setAttribute('fill','var(--well-fill)');setTimeout((function(vx){return function(){drop(vx.cx,vx.cy)}})(v),r*40);}}
  function reset(){for(let c=0;c<C;c++)for(let r=0;r<R;r++)
    setTimeout((function(rr,cc){return function(){w[rr][cc].el.setAttribute('fill','var(--well-empty)')}})(r,c),c*60+r*15);}
  setX(sx);
  function cycle(){col=0;next();}
  function next(){
    if(col>=C){setTimeout(function(){reset();setTimeout(function(){
      var f=sx+(C-1)*dx,t0=performance.now();
      (function r(now){var t=Math.min((now-t0)/800,1);setX(f+(sx-f)*ease(t));
        t<1?requestAnimationFrame(r):setTimeout(cycle,300);})(performance.now());
    },C*60+R*15+200);},1400);return;}
    var f=col===0?sx:sx+(col-1)*dx,to=sx+col*dx,t0=performance.now();
    (function mv(now){var t=Math.min((now-t0)/400,1);setX(f+(to-f)*ease(t));
      t<1?requestAnimationFrame(mv):(fill(col),setTimeout(function(){col++;next();},600));})(performance.now());
  }
  setTimeout(cycle,600);
})();
</script>
